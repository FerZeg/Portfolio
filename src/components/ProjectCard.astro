---
interface Props {
    title: string,
    description: string,
    image: string,
    link: string,
    repo: string,
    tech: string[],
}

const { title, description, image, tech } = Astro.props;
---

<div class="project-card">
    <div class="project-card__image">
        <img src={image} alt={title} />
    </div>
    <div class="project-card__content">
        <h3 class="text-gradient">{title}</h3>
        <p>{description}</p>
        <div class="project-card__tech">
            {tech.map((item, index) => (
                <span>{item}</span>
            ))}
        </div>
    </div>
</div>
