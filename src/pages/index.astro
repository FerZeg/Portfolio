---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Intro from '../components/Intro.astro';
import Projects from '../components/Projects.astro';
import Career from '../components/Career.astro';
import ThemePicker from '../components/ThemePicker.astro';
import Footer from '../components/Footer.astro'
import Purposes from '../components/Purposes.astro';
---

<Layout title="Porfolio de Fernando J. - Desarrollador Web">
	<Header/>
	<main>
		<Intro/>
		<Career/>
		<Projects/>
		<Purposes/>
		<ThemePicker/>
	</main>
	<Footer/>
</Layout>
<style is:global>
	body > main > section {
		margin-bottom: 4rem;
	}
</style>
<style>
	@keyframes fade-in {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
	main {
		position: relative;
		margin: 20px auto;
		width: 750px;
		max-width: calc(100% - 2rem);
		font-size: 1.2rem;
		line-height: 1.6;
		display: flex;
		flex-direction: column;
		gap: 3rem;
		opacity: 0;
		animation: fade-in 0.5s cubic-bezier(.86,.02,.83,.67) forwards;
	}
</style>
